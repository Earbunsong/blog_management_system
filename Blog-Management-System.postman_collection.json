{
  "info": {
    "name": "Blog Management System API",
    "description": "Complete API collection for Blog Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"username\": \"testuser\",\n  \"password\": \"Password123\",\n  \"confirmPassword\": \"Password123\",\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Register a new user account"
          }
        },
        {
          "name": "Login (Get Session)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/session",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "session"]
            },
            "description": "Get current user session (requires authentication cookie)"
          }
        },
        {
          "name": "Get Providers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/providers",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "providers"]
            },
            "description": "Get available authentication providers"
          }
        }
      ]
    },
    {
      "name": "Posts",
      "item": [
        {
          "name": "Get All Posts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/posts?page=1&limit=10&status=PUBLISHED",
              "host": ["{{baseUrl}}"],
              "path": ["api", "posts"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page"
                },
                {
                  "key": "status",
                  "value": "PUBLISHED",
                  "description": "PUBLISHED, DRAFT, or ARCHIVED"
                },
                {
                  "key": "category",
                  "value": "",
                  "description": "Filter by category slug",
                  "disabled": true
                },
                {
                  "key": "tag",
                  "value": "",
                  "description": "Filter by tag slug",
                  "disabled": true
                },
                {
                  "key": "authorId",
                  "value": "",
                  "description": "Filter by author ID",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "",
                  "description": "Search in title and content",
                  "disabled": true
                }
              ]
            },
            "description": "Get all posts with pagination and filters"
          }
        },
        {
          "name": "Get Post by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/posts/{{postId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "posts", "{{postId}}"]
            },
            "description": "Get single post by ID (auto-increments view count)"
          }
        },
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My First Blog Post\",\n  \"content\": \"<p>This is the content of my first blog post with <strong>rich text</strong> formatting.</p>\",\n  \"excerpt\": \"A brief summary of my first blog post\",\n  \"featuredImage\": \"https://example.com/image.jpg\",\n  \"categoryIds\": [\"{{categoryId}}\"],\n  \"tagNames\": [\"Technology\", \"Web Development\", \"Next.js\"],\n  \"seoTitle\": \"My First Blog Post - SEO Title\",\n  \"seoDescription\": \"This is the SEO description for my first blog post\",\n  \"seoKeywords\": \"blog, technology, web development\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/posts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "posts"]
            },
            "description": "Create a new blog post (requires authentication)"
          }
        },
        {
          "name": "Update Post",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Blog Post Title\",\n  \"content\": \"<p>Updated content with <strong>changes</strong>.</p>\",\n  \"excerpt\": \"Updated excerpt\",\n  \"featuredImage\": \"https://example.com/new-image.jpg\",\n  \"categoryIds\": [\"{{categoryId}}\"],\n  \"tagNames\": [\"Technology\", \"Updated Tag\"],\n  \"seoTitle\": \"Updated SEO Title\",\n  \"seoDescription\": \"Updated SEO description\",\n  \"seoKeywords\": \"updated, keywords\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/posts/{{postId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "posts", "{{postId}}"]
            },
            "description": "Update existing post (requires authentication, author or admin only)"
          }
        },
        {
          "name": "Delete Post",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/posts/{{postId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "posts", "{{postId}}"]
            },
            "description": "Delete a post (requires authentication, author or admin only)"
          }
        }
      ]
    },
    {
      "name": "Post Interactions",
      "item": [
        {
          "name": "Like Post",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/posts/{{postId}}/like",
              "host": ["{{baseUrl}}"],
              "path": ["api", "posts", "{{postId}}", "like"]
            },
            "description": "Like a post (requires authentication)"
          }
        },
        {
          "name": "Unlike Post",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/posts/{{postId}}/like",
              "host": ["{{baseUrl}}"],
              "path": ["api", "posts", "{{postId}}", "like"]
            },
            "description": "Unlike a post (requires authentication)"
          }
        },
        {
          "name": "Bookmark Post",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/posts/{{postId}}/bookmark",
              "host": ["{{baseUrl}}"],
              "path": ["api", "posts", "{{postId}}", "bookmark"]
            },
            "description": "Bookmark a post (requires authentication)"
          }
        }
      ]
    },
    {
      "name": "Comments",
      "item": [
        {
          "name": "Get Post Comments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/posts/{{postId}}/comments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "posts", "{{postId}}", "comments"]
            },
            "description": "Get all approved comments for a post (includes nested replies)"
          }
        },
        {
          "name": "Create Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"This is a great post! Thanks for sharing.\",\n  \"parentId\": null\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/posts/{{postId}}/comments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "posts", "{{postId}}", "comments"]
            },
            "description": "Create a comment on a post (requires authentication). Set parentId to reply to another comment."
          }
        },
        {
          "name": "Create Reply to Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Thanks for your comment!\",\n  \"parentId\": \"{{commentId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/posts/{{postId}}/comments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "posts", "{{postId}}", "comments"]
            },
            "description": "Reply to an existing comment"
          }
        },
        {
          "name": "Update Comment",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Updated comment content\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/comments/{{commentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "comments", "{{commentId}}"]
            },
            "description": "Update a comment (requires authentication, author only)"
          }
        },
        {
          "name": "Delete Comment",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/comments/{{commentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "comments", "{{commentId}}"]
            },
            "description": "Delete a comment (requires authentication, author or admin only)"
          }
        }
      ]
    },
    {
      "name": "Categories",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/categories",
              "host": ["{{baseUrl}}"],
              "path": ["api", "categories"]
            },
            "description": "Get all categories with post counts"
          }
        },
        {
          "name": "Create Category (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Technology\",\n  \"description\": \"All about technology and innovation\",\n  \"image\": \"https://example.com/tech-category.jpg\",\n  \"parentId\": null\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/categories",
              "host": ["{{baseUrl}}"],
              "path": ["api", "categories"]
            },
            "description": "Create a new category (requires admin authentication)"
          }
        }
      ]
    },
    {
      "name": "Tags",
      "item": [
        {
          "name": "Get All Tags",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/tags",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tags"]
            },
            "description": "Get all tags"
          }
        }
      ]
    },
    {
      "name": "Search",
      "item": [
        {
          "name": "Global Search",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/search?q=technology&type=posts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "technology",
                  "description": "Search query"
                },
                {
                  "key": "type",
                  "value": "posts",
                  "description": "Search type: posts, categories, tags, users"
                }
              ]
            },
            "description": "Global search across the blog"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "postId",
      "value": "",
      "type": "string"
    },
    {
      "key": "commentId",
      "value": "",
      "type": "string"
    },
    {
      "key": "categoryId",
      "value": "",
      "type": "string"
    }
  ]
}
